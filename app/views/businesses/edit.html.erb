<div class="container format-login">
  <div class="row justify-content-center">
    <div class="col-xs-6 col-sm-6 col-sm-offset-6">
      <div class="form-login">
        <h2>Update your business information</h2>
        <%= simple_form_for [@user, @business] do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :company_name, label: "Company Name" %>
            <%= f.input :company_url, label: "Company URL" %>
            <%= f.input :industry %>
            <%= f.input :photo, label: "Company Logo", as: :file %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Update", class: "btn btn-outline-light" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

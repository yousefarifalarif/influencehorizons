<div class="container chatroom">
  <h5># <%= chatroom.name %></h5>

  <div class="messages">
    <% chatroom.messages.each do |message| %>
      <div id="message-<%= message.id %>" class="d-flex align-items-center mb-2">
        <% if current_user == message.user %>

        <% else %>
          <%= cl_image_tag message.user.role == "Business" ? message.user.business.photo.key : message.user.influencer.photo.key, class:"avatar-bordered" %>
          <div class="pl-2 text-left">
            <small>
              <strong><%= message.user.role == "Business" ? message.user.business.company_name : message.user.first_name %></strong>
              <i><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i>
            </small>
            <p class="mb-0"><%= message.content %></p>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
  <%= simple_form_for(@message) do |f| %>
    <%= f.hidden_field :chatroom_id, value: chatroom.id %>
    <%= f.input :content, label: false, placeholder: "Message ##{chatroom.name}" %>
  <% end %>
</div>

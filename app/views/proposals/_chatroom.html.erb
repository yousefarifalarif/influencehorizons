<div class="container chatroom">
  <h5># <%= chatroom.name %></h5>

  <div class="messages" data-controller="chatroom-subscription" data-chatroom-subscription-chatroom-id-value="<%= chatroom.id %>">
    <% chatroom.messages.each do |message| %>
      <%= render "messages/message", message: message %>
    <% end %>
  </div>
  <%= simple_form_for(@message, remote: true) do |f| %>
    <%= f.hidden_field :chatroom_id, value: chatroom.id %>
    <%= f.input :content, label: false, placeholder: "Message ##{chatroom.name}" %>
  <% end %>
</div>

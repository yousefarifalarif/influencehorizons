<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
  Create Collaboration
</button>

<div class="open-proposals" data-controller="dropdown">
  <h4>Open</h4>
  <div class="dropdown-btn" data-dropdown-target="btn" data-action="click->dropdown#toggleContent">Collapse</div>
  <div class="card-container" data-dropdown-target="container">
    <% @proposals.each do |proposal| %>
      <% if proposal.accepted && proposal.status != "closed" %>
        <%= render 'shared/proposal_card', proposal: proposal %>
      <% end %>
    <% end %>
  </div>
</div>

<div class="pending-proposals" data-controller="dropdown">
  <h4>Pending</h4>
  <div class="dropdown-btn" data-dropdown-target="btn" data-action="click->dropdown#toggleContent">Collapse</div>
  <div class="card-container" data-dropdown-target="container">
    <% @proposals.each do |proposal| %>
      <% unless proposal.accepted %>
      <% @show = proposal %>
      <%= render "./shared/show_proposal_modal", proposal: @show, campaign: @campaign, modal_title: @show.title%>
      <%= render 'shared/proposal_card', proposal: proposal %>
      <% end %>
    <% end %>
  </div>
</div>

<div class="closed-proposals" data-controller="dropdown">
  <h4>Closed</h4>
  <div class="dropdown-btn" data-dropdown-target="btn" data-action="click->dropdown#toggleContent">Collapse</div>
  <div class="card-container" data-dropdown-target="container">
    <% @proposals.each do |proposal| %>
      <% if proposal.accepted && proposal.status == "closed"  %>
        <div class="proposal-card">
          <% @show = proposal %>
          <%= render "./shared/show_proposal_modal", proposal: @show, modal_title: @show.title%>
          <h5><%= proposal.title %></h5>
          <p><%= proposal.status %></p>
          <p><%#= proposal.influencer.user.first_name %> <%#= proposal.influencer.user.last_name %></p>
        </div>
      <% end %>
    <% end %>
  </div>
</div>


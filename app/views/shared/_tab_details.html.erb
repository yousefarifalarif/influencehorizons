<div class="details">

  <div class="campaign-status">
    <% if current_user.business %>
      <% if @campaign.visibility == true %>
        <p>Public visibility: <strong>Activated</strong></p>
      <% else %>
        <p>Public visibility: <strong>Deactivated</strong></p>
      <% end %>
    <% end %>
  </div>

  <div class="small-details d-flex justify-content-between">
    <div class="card-info campaign-card-info">
      <div class="blue-bar">
        <h4>Location</h4>
      </div>
      <div class="center-content mt-3">
        <i class="fas fa-map-marker-alt"></i>
        <p><%= @campaign.location %></p>
      </div>
    </div>

    <div class="card-info campaign-card-info">
      <div class="blue-bar">
        <h4>Dates</h4>
      </div>
      <i class="fas fa-calendar-alt"></i>
      <p class="campaign-card-small-text"><strong><%= @campaign.start_date %>
      <br>
      </strong> to <strong>
      <br>
      <%= @campaign.end_date %></strong></p>
    </div>

    <div class="card-info campaign-card-info">
      <div class="blue-bar">
        <h4>Budget</h4>
      </div>
      <div class="center-content mt-3">
        <i class="fas fa-wallet"></i>
        <p>Â£ <%= @campaign.budget %></p> <!--hide on influencer -->
      </div>
    </div>
  </div>

  <div class="card-info large-details-card">
    <div class="description">
      <div class="blue-bar">
        <h4>Description</h4>
      </div>
      <p><%= @campaign.description %></p>
    </div>
  </div>

  <% if current_user.business %>
    <div class="card-info large-details-card">
      <h4 class="blue-bar">Uploaded Documents</h4>
    </div>
  <% end %>

</div>

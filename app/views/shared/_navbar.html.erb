<% if current_page?(root_path)%>
<div class="navbar navbar-expand-sm navbar-lewagon fixed-top" data-controller="navbar" data-action="scroll@window->navbar#updateNavbar">
<% else %>
<div class="navbar navbar-expand-sm navbar-light navbar-lewagon navbar-lewagon-white fixed-top">
<% end %>
  <%= link_to root_path, class: "navbar-brand" do %>
    <img src="https://res.cloudinary.com/katielht/image/upload/v1637870614/Logo_IH_OhneSlogan_ccqxey.png">
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item dropdown d-flex align-items-center">
          <p class="my-0 mr-2">Welcome, <%= current_user.first_name %></p>
          <% if current_user.influencer %>
            <%= cl_image_tag current_user.influencer.photo.key, class:"avatar-bordered dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% elsif current_user.business %>
            <%= cl_image_tag current_user.business.photo.key, class:"avatar-bordered dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% end %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Dashboard", dashboard_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<div class="container format-login">
  <div class="row justify-content-center">
    <div class="col-xs-6 col-sm-6 col-sm-offset-6">
      <div class="form-login">
        <h2>Influencer Sign up</h2>
        <%= simple_form_for [@user, @influencer] do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :ig_username %>
            <%= f.input :youtube_channel_name %>
            <%= f.input :twitter_username %>
            <%= f.input :facebook_username %>
            <%= f.input :gender, collection: ['Male', 'Female', 'Prefer not to say'] %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Sign up", class: "btn btn-outline-light" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

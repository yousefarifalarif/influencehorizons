<%= simple_form_for [business, campaign] do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :description %>
      <%= f.input :budget %>
      <%= f.input :location %>
      <%= f.input :start_date %>
      <%= f.input :end_date %>
      <%= f.input :visibility %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Create Campaign" %>
    </div>
  <% end %>

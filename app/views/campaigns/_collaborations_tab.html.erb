<div class="open-proposals" data-controller="dropdown">
  <h4>Open</h4>
  <div class="dropdown-btn" data-dropdown-target="btn" data-action="click->dropdown#toggleContent">Collapse</div>
  <div class="card-container" data-dropdown-target="container">
    <% @proposals.each do |proposal| %>
      <% if proposal.accepted && proposal.status != "closed"  %>
        <%= render 'proposal_card', proposal: proposal %>
      <% end %>
    <% end %>
  </div>
</div>

<div class="pending-proposals" data-controller="dropdown">
  <h4>Pending</h4>
  <div class="dropdown-btn" data-dropdown-target="btn" data-action="click->dropdown#toggleContent">Collapse</div>
  <div class="card-container" data-dropdown-target="container">
    <% @proposals.each do |proposal| %>
      <% unless proposal.accepted %>
        <%= render 'proposal_card', proposal: proposal %>
      <% end %>
    <% end %>
  </div>
</div>

<div class="closed-proposals" data-controller="dropdown">
  <h4>Closed</h4>
  <div class="dropdown-btn" data-dropdown-target="btn" data-action="click->dropdown#toggleContent">Collapse</div>
  <div class="card-container" data-dropdown-target="container">
    <% @proposals.each do |proposal| %>
      <% if proposal.accepted && proposal.status == "closed"  %>
        <%= render 'proposal_card', proposal: proposal %>
      <% end %>
    <% end %>
  </div>
</div>
